# MANIFEST.in - Include non-Python files in package distribution

include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include Makefile

recursive-include sim_env *.py
recursive-include sim_env *.json
recursive-include sim_env *.yaml
recursive-include sim_env *.yml

recursive-include docs *.md
recursive-include docs *.yml
recursive-include docs *.yaml

recursive-include tests *.py

global-exclude __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude .git
global-exclude .gitignore
